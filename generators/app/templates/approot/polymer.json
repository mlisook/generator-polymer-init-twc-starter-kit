{
  "entrypoint": "index.html",
  "shell": "src/<%= elementName %>.html",
  "fragments": [
    "src/<%= viewPrefix %>-view1.html",
    "src/<%= viewPrefix %>-view2.html",
    "src/<%= viewPrefix %>-view3.html",
    "src/<%= viewPrefix %>-view404.html"
  ],
  "sources": [
    "src/**/*",
    "images/**/*",
    "bower.json"
  ],
  "extraDependencies": [
    "manifest.json",
    "bower_components/webcomponentsjs/*.js"
  ],
  "lint": {
    "rules": ["polymer-2"]
  },
  "builds": [
    {
      "preset": "es5-bundled"
    },
    {
      "preset": "es6-bundled"
    },
    {
      "preset": "es6-unbundled"
    }
  ]
}
